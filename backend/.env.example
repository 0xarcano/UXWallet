# ──────────────────────────────────────────────
# UXWallet Backend — Environment Variables
# ──────────────────────────────────────────────

# Server
PORT=3001
NODE_ENV=development

# PostgreSQL (Prisma)
DATABASE_URL="postgresql://uxwallet:uxwallet@localhost:5432/uxwallet?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Chain RPC URLs (MVP: Yellow L3, Ethereum, Base)
RPC_URL_YELLOW_L3="https://rpc.yellow.org"
RPC_URL_ETHEREUM="https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY"
RPC_URL_BASE="https://mainnet.base.org"

# Chain IDs
CHAIN_ID_YELLOW_L3=12345
CHAIN_ID_ETHEREUM=1
CHAIN_ID_BASE=8453

# lif-rust microservice
LIF_RUST_BASE_URL="http://localhost:8080"

# KMS (production: aws | local dev: local)
KMS_PROVIDER=local
# For local dev only — hex-encoded private key (NEVER use in production)
KMS_LOCAL_PRIVATE_KEY="0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80"
# For AWS KMS
# AWS_KMS_KEY_ID=""
# AWS_REGION=""

# Session key defaults
SESSION_KEY_DEFAULT_TTL_SECONDS=86400

# Logging
LOG_LEVEL=debug
