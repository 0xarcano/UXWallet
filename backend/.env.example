# ── Server ───────────────────────────────────────────
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# ── Database (PostgreSQL) ────────────────────────────
DATABASE_URL=postgresql://flywheel:flywheel@localhost:5432/flywheel?schema=public

# ── Redis ────────────────────────────────────────────
REDIS_URL=redis://localhost:6379

# ── Yellow / Nitrolite ClearNode ─────────────────────
# Production:  wss://clearnet.yellow.com/ws
# Sandbox:     wss://clearnet-sandbox.yellow.com/ws  (used automatically when NODE_ENV=test)
CLEARNODE_WSS_URL=wss://clearnet.yellow.com/ws
CLEARNODE_APPLICATION=Flywheel

# ── Chain RPCs ───────────────────────────────────────
RPC_URL_SEPOLIA=https://rpc.sepolia.org
RPC_URL_BASE_SEPOLIA=https://sepolia.base.org

# ── KMS / Solver ─────────────────────────────────────
# Private key for the Flywheel Solver signer (hex, with 0x prefix)
SOLVER_PRIVATE_KEY=

# ── Rate Limiting ────────────────────────────────────
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# ── Session Keys ─────────────────────────────────────
SESSION_KEY_DEFAULT_TTL_SECONDS=3600
